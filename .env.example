# ðŸ›¸ PeloJams Environment Configuration ðŸ›¸
# Copy this file to .env and fill in your API keys

# Spotify API Configuration
# Get these from: https://developer.spotify.com/dashboard
VITE_SPOTIFY_CLIENT_ID=your_spotify_client_id_here
VITE_SPOTIFY_REDIRECT_URI=http://127.0.0.1:5173/spotify-callback

# Server-side Spotify secrets (for production security)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:5173/spotify-callback

# GetSongBPM API Configuration  
# Get free API key from: https://getsongbpm.com/api
VITE_GETSONGBPM_API_KEY=your_getsongbpm_api_key_here

# YouTube/Google API Configuration (Future)
# Get these from: https://console.developers.google.com
VITE_YOUTUBE_CLIENT_ID=your_youtube_client_id_here
VITE_YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
VITE_YOUTUBE_REDIRECT_URI=http://localhost:5174/auth/youtube/callback

# Application Settings
NODE_ENV=development
VITE_APP_URL=http://localhost:5174

# Optional: Analytics or other third-party services
# VITE_ANALYTICS_ID=your_analytics_id_here
# VITE_SENTRY_DSN=your_sentry_dsn_here